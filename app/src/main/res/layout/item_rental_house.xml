<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/box_background"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/house_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_house_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/house_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/house_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House Address"
            android:textSize="16sp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/house_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House Price"
            android:textSize="16sp"
            android:padding="4dp"/>
    </LinearLayout>

</LinearLayout>
