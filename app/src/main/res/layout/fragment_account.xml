<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundColor"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_card"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/roleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/updateEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="sans-serif" />

        <Button
            android:id="@+id/updateEmailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Email"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <EditText
            android:id="@+id/updatePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="sans-serif" />

        <Button
            android:id="@+id/updatePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <Button
            android:id="@+id/viewAccountDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Account Details"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_account"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <Button
            android:id="@+id/deleteAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_delete"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
    </LinearLayout>
</ScrollView>
